<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector=":is(Button):not(.showBackground)">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style Selector=":is(Button):not(.showBackground):pressed">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector=":is(Button):not(.showBackground):pointerover">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="ToggleButton:not(.showBackground):checked">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Opacity" Value="1" />
    </Style>
    <Style Selector="ToggleButton:not(.showBackground):unchecked">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Opacity" Value="0.5" />
    </Style>
    <Style Selector="ToggleButton:not(.showBackground):checked /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="ToggleButton:not(.showBackground):unchecked /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
</Styles>